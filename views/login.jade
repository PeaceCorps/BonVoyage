extends layout

block styles
  // Login page style
  link(href='/css/login.css', rel='stylesheet')

block content
  .login-container
    form.form-signin(action='/api/login', method='post')
      h2.form-signin-heading
        p Login

      include flash

      label.sr-only(for='inputEmail') Email address
      input#inputEmail.form-control(type='email', placeholder='Email address', required='', autofocus='', name = 'email')
      label.sr-only(for='inputPassword') Password
      input#inputPassword.form-control(type='password', placeholder='Password', required='', name = 'password')
      //- .checkbox
      //-   label
      //-     input(type='checkbox', value='remember-me')
      //-     p#remember Remember me
      button#submitInfo.submit-btn.btn.btn-lg.btn-default.btn-block(type='submit') Sign in
      a(href = '/reset')
        p#forgot-text Forgot your password?


