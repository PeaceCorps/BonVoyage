extends layout



block styles
  // Login page style
  link(href='/css/login.css', rel='stylesheet')

block content
  .login-container
    form.form-signin
      h2.form-signin-heading
        p Password Reset

      include flash

      label.sr-only(for='inputEmail') Email address
      input#inputEmail.form-control(type='email', placeholder='Email address', required='', autofocus='', name = 'email', value=submission.email)

      .g-recaptcha(data-sitekey='6LcF2hcTAAAAAMt3Y-82-g2Kc_fJ3wgdRdoUAPEk', data-callback='enableBtn')

      button#submitInfo.submit-btn.btn.btn-lg.btn-default.btn-block(disabled='true') Reset Password
      //- a(href = '')
      //-   p#forgot-text Forgot your password?

block scripts
  script(src='https://www.google.com/recaptcha/api.js')
  script(src='/js/reset.js')
