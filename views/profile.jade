extends layout

block styles
	link(href='/css/selectize.css', rel='stylesheet')
	link(href='/css/selectize.bootstrap3.css', rel='stylesheet')
	link(href='/css/intlTelInput.css', rel='stylesheet')
	link(rel='stylesheet', href='/css/profile.css')

block content
	.row
		.col-xs-12.col-md-offset-1.col-md-10
			.jumbotron
				
				//- Country Flag
				img#countryFlag(src='/image/flags/' + userToShow.countryCode.toLowerCase() + '.svg')
				
				//- Header name
				h2#headerName= userToShow.name
				
				//- Form Fields
				form#profile
				
					include flash
					
					input.hidden#userId(value=userToShow._id)
					input.hidden#loggedInUserId(value=user._id)
					
					label(for='name') Name
					input.form-control#name(value=(userToShow.name ? userToShow.name : ''), data-default=(userToShow.name ? userToShow.name : ''), placeholder='John Doe')
					
					label(for='name') Email
					input.form-control#email(value=(userToShow.email ? userToShow.email : ''), data-default=(userToShow.email ? userToShow.email : ''), placeholder='johndoe@peacecorps.gov')
					
					label(for='name') Phone Number
					input.form-control#phone(type='tel', value=(userToShow.phone ? userToShow.phone : ''), data-default=(userToShow.phone ? userToShow.phone : ''), placeholder='(123) 456 7890')
					
					label(for='name') Country
					select.form-control#country(value=userToShow.countryCode, data-default=userToShow.countryCode)
					
					button.btn.btn-success.disabled(type='submit') Update Profile

					if user.access == 2 || '' + user._id == '' + userToShow._id
						button#deleteAccount.btn.btn-danger Delete Account
				
block scripts
	script(src='/js/selectize.min.js')
	script(src='/js/profile.js')
	script(src='/js/intlTelInput.min.js')
	script(src='/js/utils.js')
