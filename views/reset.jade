      input#inputPassword.form-control(type='password', placeholder='New Password', required='', name = 'newPassword')

      label.sr-only(for='inputPassword') Re-enter New Password
      input#inputPassword.form-control(type='password', placeholder='Re-enter New Password', required='', name = 'confirmPassword')
