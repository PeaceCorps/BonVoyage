extends layout

block styles
  link(href='/css/default.css', rel='stylesheet')
  link(href='/css/default.date.css', rel='stylesheet')
  link(href='/css/selectize.css', rel='stylesheet')
  link(href='/css/selectize.bootstrap3.css', rel='stylesheet')
  link(rel='stylesheet', href='/css/submission.css')

block content
  .row
    .col-xs-12.col-md-offset-1.col-md-10

      .jumbotron
        h2 Submission Form

        form(action='/requests' method='post')
          input.form-control.datepicker(type='text', placeholder='Date leaving', name='leaving')
          input.form-control.datepicker(type='text', placeholder='Date returning', name='returning')
          select.form-control#select-country(placeholder='Country', name='country')
          textarea.form-control(rows='6', placeholder='Reason for leave:', name='reason')
          button.btn(type='submit') Submit

block scripts
  script(src='/js/picker.js')
  script(src='/js/picker.date.js')
  script(src='/js/selectize.min.js')
  script(src='/js/submission.js')



