extends layout

block styles
  // Login page style
  link(href='/css/login.css', rel='stylesheet')

block content
  .login-container
    form.form-signin(action='/login', method='post')
      h2.form-signin-heading
        p Login

      if message != ""
        .alert.alert-danger(role='alert')
          span.glyphicon.glyphicon-exclamation-sign(aria-hidden='true')
          span= message

      label.sr-only(for='inputEmail') Email address
      input#inputEmail.form-control(type='text', placeholder='Email address', required='', autofocus='', name = 'email')
      label.sr-only(for='inputPassword') Password
      input#inputPassword.form-control(type='password', placeholder='Password', required='', name = 'password')
      .checkbox
        label
          input(type='checkbox', value='remember-me')
          p#remember Remember me
      button#submitInfo.submit-btn.btn.btn-lg.btn-primary.btn-block(type='submit')
        p.signin-text Sign in
      a(href = '')
        p#forgot-text Forgot your password?


