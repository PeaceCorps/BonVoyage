doctype html
html(lang='en')
  head
    // The 3 meta tags below MUST come first in the head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    title Login
    // Reset CSS style
    link(href='/css/reset.css', rel='stylesheet')
    // Bootstrap
    link(href='/css/bootstrap.min.css', rel='stylesheet')
    // Login page style
    link(href='/css/login.css', rel='stylesheet')

  body
    .top-nav
      h3.login-title BonVoyage
      button#register-btn.btn.btn.btn-default(type='button') Register
    .login-container
      form.form-signin(action='/login', method='post')
        h2.form-signin-heading
          p Login
        label.sr-only(for='inputEmail') Email address
        input#inputEmail.form-control(type='text', placeholder='Email address', required='', autofocus='', name = 'email')
        label.sr-only(for='inputPassword') Password
        input#inputPassword.form-control(type='pass', placeholder='Password', required='', name = 'password')
        .checkbox
          label
            input(type='checkbox', value='remember-me')
            p#remember Remember me
        button#submitInfo.submit-btn.btn.btn-lg.btn-primary.btn-block(type='submit')
          p.signin-text Sign in
        a(href = '')
          p#forgot-text Forgot your password?

    // jQuery (for Bootstrap's JavaScript plugins)
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    // Include all complied plugins
    script(src='/js/bootstrap.min.js')
    // Import login JavaScript
    script(src='/js/login.js')
